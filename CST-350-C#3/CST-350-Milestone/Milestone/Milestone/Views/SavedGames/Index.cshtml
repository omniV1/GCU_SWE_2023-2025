@model IEnumerable<Milestone.Models.GameModels.SavedGame>
@{
    ViewData["Title"] = "Saved Games";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="text-center mb-4">Saved Games</h2>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    No saved games found. Start a new game and save your progress!
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Game ID</th>
                                <th>Date Saved</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var game in Model)
                            {
                                <tr>
                                    <td>@game.Id</td>
                                    <td>@game.DateSaved.ToLocalTime().ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Game"
                                               asp-action="LoadGame"
                                               asp-route-id="@game.Id"
                                               class="btn btn-primary btn-sm">
                                                Load Game
                                            </a>
                                            <form asp-action="Delete"
                                                  asp-route-id="@game.Id"
                                                  method="post"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this saved game?');">
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="text-center mt-4">
                <a asp-controller="Game" asp-action="Index" class="btn btn-primary">
                    Start New Game
                </a>
            </div>
        </div>
    </div>
</div>